{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "types": ["vite-plugin-svgr/client", "vite-plugin-pwa/client"],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/Components/*"],
      "@pages/*": ["src/Pages/*"],
      "@styles/*": ["src/Styles/*"],
      "@data/*": ["src/Data/*"],
      "@images/*": ["src/Images/*"]
    }
  },
  "include": ["src", "svg.d.ts"],
  "exclude": [
    "src/Components/Review/ReviewWriteModalDemo.tsx"
  ]
}
